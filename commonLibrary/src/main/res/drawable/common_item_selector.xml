<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--默认色值 @-->
    <item android:state_checked="false" android:state_pressed="false" android:state_selected="false">
        <color android:color="@color/c13" />
    </item>

    <!--点击色值-->
    <item android:state_pressed="true">
        <color android:color="@color/c8" />
    </item>

    <!--置顶色值-->
    <item android:state_selected="true">
        <color android:color="@color/c10" />
    </item>


</selector>