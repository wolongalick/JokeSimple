<?xml version="1.0" encoding="utf-8"?><!--赞,踩,评论,分享-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:gravity="center_vertical">

    <!--顶-->
    <LinearLayout
        android:id="@+id/ll_digg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_digg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_digg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="15dp">

            <TextView
                android:id="@+id/tv_digg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="200"
                android:textColor="@drawable/selector_text_pink_gray"
                android:textSize="@dimen/joke_digg_bury" />

            <TextView
                android:id="@+id/tv_digg_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_digg"
                android:layout_marginBottom="-5dp"
                android:gravity="bottom"
                android:text="+1"
                android:textColor="@color/main_yellow"
                android:textSize="@dimen/joke_digg_bury"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <!--踩-->
    <LinearLayout
        android:id="@+id/ll_bury"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_bury" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="15dp">

            <TextView
                android:id="@+id/tv_bury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="5"
                android:text="1"
                android:textColor="@drawable/selector_text_pink_gray"
                android:textSize="@dimen/joke_digg_bury" />

            <TextView
                android:id="@+id/tv_bury_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_bury"
                android:layout_marginBottom="-5dp"
                android:text="+1"
                android:textColor="@color/main_yellow"
                android:textSize="@dimen/joke_digg_bury"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <!--评论-->
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/comment" />

        <TextView
            android:id="@+id/tv_all_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/gray_cd"
            android:textSize="@dimen/joke_digg_bury" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/share_large" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/gray_cd"
            android:textSize="@dimen/joke_digg_bury" />
    </LinearLayout>

</LinearLayout>
