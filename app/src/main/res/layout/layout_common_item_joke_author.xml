<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/ll_item_joke_author"
    >

    <!--作者信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/home_paddingLeftRight"
        android:paddingRight="6dp"
        android:gravity="center_vertical"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headPic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            fresco:placeholderImage="@drawable/place_holder_avatar"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="哆啦A梦"
                android:textColor="@color/black_66"
                android:textSize="@dimen/joke_author" />

        </LinearLayout>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/close" />
    </LinearLayout>

    <!--标题-->
    <TextView
        android:id="@+id/title_text"
        android:layout_marginTop="12dp"
        android:text="标题标题标题标题标题标题标题标题"
        android:textColor="#222222"
        android:textSize="@dimen/joke_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/home_paddingLeftRight"
        android:paddingRight="@dimen/home_paddingLeftRight"
        android:lineSpacingExtra="9dp"/>




</LinearLayout>
