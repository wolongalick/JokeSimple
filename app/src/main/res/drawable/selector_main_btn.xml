<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffc600"
                android:endColor="#ffdd11"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffd200"
                android:endColor="#ffe720"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>

    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_d8"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
</selector>