<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/common_broundground</item>
        <item name="android:listDivider">@drawable/divider_list_grey_1dp</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="browsePhotoAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/open_enter_zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>


    <style name="MW.Topbar">
        <item name="android:id">@id/topbar</item>
        <item name="topbarBg">@drawable/toubu</item>
        <item name="topbarTextColor">@color/main_text_color</item>
        <item name="topbarIsExtendStatusBar">true</item>
        <item name="topbarLeftImage">@drawable/ic_return</item>
        <item name="topbarLeftType">img</item>
        <item name="topbarLeftMode">back</item>
        <item name="topbarRightType">none</item>
        <item name="statusBarAsTopbarBg">false</item>
        <item name="statusBarBg">@drawable/statusbar</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="common_btn_pink">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/selector_main_btn</item>
        <item name="android:textColor">@drawable/selector_main_text_color</item>
        <item name="android:text">登录</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="common_btn_pink_boselector_main_btn.xmlrder" parent="common_btn_pink">
        <item name="android:background">@drawable/select_btn_pink_border</item>
        <item name="android:textColor">@drawable/selector_text_pink_write</item>
    </style>


    <style name="common_editText">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="common_editText.singleLine">
        <item name="android:singleLine">true</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophiden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <style name="award_provide_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_2</item>
    </style>


    <style name="award_provide_money">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_yellow</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--            <item name="android:windowFrame">@null</item>
                    <item name="android:windowIsFloating">true</item>
